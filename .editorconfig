# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[*.py]
max_line_length = 120

[*.json]
indent_size = 2
insert_final_newline = ignore

[Makefile]
indent_style = tab

[*.{tf,tfvars}]
indent_size = 2
indent_style = space
